# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# AWS Configuration (Server-side only)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# DynamoDB Table Names
DYNAMODB_CLIENTS_TABLE=holdings-ctc-clients
DYNAMODB_TICKETS_TABLE=holdings-ctc-tickets
DYNAMODB_APPS_TABLE=holdings-ctc-apps
DYNAMODB_FEATURE_REQUESTS_TABLE=holdings-ctc-feature-requests
DYNAMODB_KNOWLEDGE_BASE_TABLE=holdings-ctc-knowledge-base
DYNAMODB_USERS_TABLE=holdings-ctc-users
DYNAMODB_ADMIN_USERS_TABLE=holdings-ctc-admin-users
DYNAMODB_RECENT_UPDATES_TABLE=holdings-ctc-recent-updates
DYNAMODB_POPULAR_TOPICS_TABLE=holdings-ctc-popular-topics
DYNAMODB_INVOICES_TABLE=holdings-ctc-invoices
DYNAMODB_QR_CODES_TABLE=holdings-ctc-qr-codes

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_for_frontend_auth
ADMIN_PASSWORD=your_admin_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.github.io
